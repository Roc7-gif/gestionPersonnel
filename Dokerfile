# Étape 1 : PHP avec Composer
FROM php:8.2-fpm

# Installer extensions nécessaires (AJOUT de libpq-dev ici)
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    zip \
    libzip-dev \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libpq-dev \
    && docker-php-ext-install pdo_mysql pdo_pgsql pgsql mbstring zip exif pcntl bcmath gd

# Installer Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Définir le dossier de travail
WORKDIR /var/www

# Copier les fichiers
COPY . .

# Installer les dépendances Laravel
RUN composer install --no-dev --optimize-autoloader

# Donner les droits aux dossiers storage et bootstrap
RUN chown -R www-data:www-data /var/www/storage /var/www/bootstrap/cache

# Exposer le port attendu par Render
EXPOSE 10000  

# Lancer Laravel en utilisant le port dynamique fourni par Render
CMD php artisan serve --host=0.0.0.0 --port=${PORT:-8000}